---
import '../styles/global.css';

interface Props {
	title?: string;
	description?: string;
}

const { title = "Recettes", description = "Collection de recettes d√©licieuses et faciles √† r√©aliser" } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}/favicon.svg`.replace(/\/\//g, '/')} />
		<meta name="generator" content={Astro.generator} />
		<title>{title} - Hugo's Recipes</title>
		<meta name="description" content={description} />
		
		<!-- Modern fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body>
		<header class="site-header">
			<div class="container">
				<nav class="nav">
					<a href={import.meta.env.BASE_URL} class="nav__brand">
						<span class="nav__icon">üç≥</span>
						<span class="nav__text">Hugo's recipes</span>
					</a>
					<div class="nav__links">
						<a href={import.meta.env.BASE_URL} class="nav__link">Accueil</a>
					</div>
				</nav>
			</div>
		</header>

		<main class="main">
			<div class="container">
				<slot />
			</div>
		</main>

		<footer class="site-footer">
			<div class="container">
				<p>&copy; {new Date().getFullYear()} - Hugo's recipes</p>
			</div>
		</footer>
	</body>
</html>
